{
  "name": "kulrs",
  "version": "0.1.0",
  "description": "Kulrs mono-repo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky || true",
    "lint:web": "cd apps/web && npm run lint",
    "format:web": "cd apps/web && npm run format",
    "build:web": "cd apps/web && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "test:web": "cd apps/web && npm run test",
    "test:shared": "cd packages/shared && npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.7.0",
    "@commitlint/config-conventional": "^19.7.0",
    "husky": "^9.0.0"
  }
}
