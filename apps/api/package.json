{
  "name": "api",
  "version": "0.1.0",
  "description": "Google Cloud Functions API for Kulrs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "functions-framework --target=handler --source=dist --port=8080",
    "dev:watch": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "keywords": [
    "kulrs",
    "api",
    "google-cloud-functions"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.2",
    "@kulrs/db": "file:../../packages/db",
    "@kulrs/shared": "file:../../packages/shared",
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "^0.38.4",
    "express": "^4.21.2",
    "firebase-admin": "^13.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.4"
  }
}
